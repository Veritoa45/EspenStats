generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  google_id      String        @unique
  email         String        @unique
  name          String?
  movements     Movement[]
  categories    Category[]
  vencimientos  Due[]
  createdAt     DateTime      @default(now())

  @@map("usuarios")
}

model Category {
  id         Int        @id @default(autoincrement())
  title      String
  type       String     // "income" or "expense"
  user       User       @relation(fields: [userId], references: [id])
  userId     Int
  movements  Movement[]

  @@map("categorias")
}

enum MovementType {
  ingreso
  egreso
}

model Movement {
  id          Int       @id @default(autoincrement())
  amount      Float
  type        MovementType     // "income" or "expense"
  date        DateTime
  title       String
  user        User       @relation(fields: [userId], references: [id])
  userId      Int
  category    Category   @relation(fields: [categoryId], references: [id])
  categoryId  Int
  createdAt   DateTime   @default(now())

  @@map("movimientos")
}

model Due {
  id                Int      @id @default(autoincrement())
  title             String
  dueDate           DateTime
  amount            Float    // este es el importe
  description       String?
  paid              Boolean  @default(false)
  calendarEventId   String?  // para sincronizaci√≥n con Google Calendar
  user              User     @relation(fields: [userId], references: [id])
  userId            Int
  createdAt         DateTime @default(now())

  @@map("vencimientos")
}